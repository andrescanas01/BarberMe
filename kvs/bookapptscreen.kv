<BookApptScreen>:
    name:"bookappt"
    FloatLayout:
        size: root.width, root.height
        canvas:
            Color:
                rgba: (0/255,51/255,78/255,1)
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            font_size: "20dp"
            text: "Book an Appointment"
            color: [23,23,23,1]
            pos_hint: {"top": 0.95, "left": 0.6}
            size_hint: (0.45, 0.2)


        MDIconButton:
            #text: "back"
            theme_text_color: "Custom"
            md_bg_color: [232/255,232/255,232/255,1]
            text_color: [0/255,51/255,78/255,1]
            pos_hint: {"top": .98, "x": 0.05}
            icon: 'account-arrow-left'
            on_release:
                root.parent.transition = SlideTransition(direction="right")
                app.change_screen("userpage")

        ScrollView:
            canvas.before:
                Color:
                    rgba: (232/255,232/255,232/255,1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10,10,0,0]
            pos_hint: {"center_x":0.5, "bottom":0.5}
            size_hint: (.9,.8)
            bar_color: (232/255,232/255,232/255,1)
            GridLayout:
                id: booking_grid
                cols: 1
                spacing: 2, 2
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '100dp'
                row_force_default: True

