<PostPageScreen>:
    MDScreen:
        #name: 'posting'
        BoxLayout:
            orientation:'vertical'
            padding: 30
            spacing: 30
            canvas:
                Color:
                    rgba:[0/255,51/255,78/255,1]
                Rectangle:
                    pos: self.pos
                    size:self.size

            MDLabel:
                text:"Page where shop chooses pic/video"
                font_size: 80
                halign: "center"


            MDIconButton:
                #text: "back"
                theme_text_color: "Custom"
                md_bg_color: [232/255,232/255,232/255,1]
                text_color: [0/255,51/255,78/255,1]
                icon: 'arrow-left'
                on_release:
                    app.change_screen("uploadpage")

