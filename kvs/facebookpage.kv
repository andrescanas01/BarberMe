<FacebookPage>:

    on_leave:

        fb_id.text = ""
        insta_id.text = ""

    on_fb_message:
        fmessage.text = self.fb_message

    on_insta_message:
        imessage.text = self.insta_message

    MDScreen:

        md_bg_color: [232/255,232/255,232/255,1]


        BoxLayout:

            orientation:"vertical"
            spacing:30
            padding:30
            canvas:
                Color:
                    rgba:[0/255,51/255,78/255,1]

        MDTextField:
            id: insta_id
            text: ""
            hint_text: "Instagram ID"
            size_hint_x: None
            width: 500
            pos_hint: {"top": .75, "center_x": .5}


        MDFillRoundFlatButton:
            id: submit_insta
            size_hint: .3, .058
            pos_hint: {"top": .65, "center_x": .3}
            text: "Check Link"
            font_size: 14
            md_bg_color: [0/255,51/255,78/255,1]
            text_color:  [232/255,232/255,232/255,1]
            on_release:
                root.insta_check(insta_id.text,root.set_insta)

        MDFillRoundFlatButton:
            id: confirm_insta
            size_hint: .3, .058
            pos_hint: {"top": .65, "center_x": .65}
            text: "Confirm Link"
            font_size: 14
            md_bg_color: [0/255,51/255,78/255,1]
            text_color:  [232/255,232/255,232/255,1]
            on_release:
                root.insta_check(insta_id.text,root.confirm_insta)

        MDLabel:
            id: imessage
            size_hint: .9 ,.072
            pos_hint: {"top": .58, "center_x": .5}
            opacity: 0
            md_bg_color: [232/255,232/255,232/255,1]
            text_color: [0/255,51/255,78/255,1]
            halign: "center"
            on_text:
                Animation(opacity=1, duration=0.5).start(self)

        MDTextField:
            id: fb_id
            text: ""
            hint_text: "Facebook ID"
            size_hint_x: None
            width: 500
            pos_hint: {"top": .45, "center_x": .5}


        MDFillRoundFlatButton:
            id: submit_fb
            size_hint: .3, .058
            pos_hint: {"top": .35, "center_x": .3}
            text: "Check Link"
            font_size: 14
            md_bg_color: [0/255,51/255,78/255,1]
            text_color:  [232/255,232/255,232/255,1]
            on_release:
                root.fb_check(fb_id.text, root.set_fb)

        MDFillRoundFlatButton:
            id: confirm_fb
            size_hint: .3, .058
            pos_hint: {"top": .35, "center_x": .65}
            text: "Confirm Link"
            font_size: 14
            md_bg_color: [0/255,51/255,78/255,1]
            text_color:  [232/255,232/255,232/255,1]
            on_release:
                root.fb_check(fb_id.text,root.confirm_fb)


        MDIconButton:
            #text: "back"
            theme_text_color: "Custom"
            md_bg_color: [232/255,232/255,232/255,1]
            text_color: [0/255,51/255,78/255,1]
            icon: 'arrow-left'
            pos_hint: {'center_x': 0.12, 'center_y': 0.09}
            on_release:
                root.parent.transition = SlideTransition(direction="right")
                app.change_screen("editaccount")
                root.parent.transition = SlideTransition(direction="left")

        MDLabel:
            id: fmessage
            size_hint: .9 ,.072
            pos_hint: {"top": .28, "center_x": .5}
            opacity: 0
            md_bg_color: [232/255,232/255,232/255,1]
            text_color: [0/255,51/255,78/255,1]
            halign: "center"
            on_text:
                Animation(opacity=1, duration=0.5).start(self)