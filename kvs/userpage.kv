<UserPage>
    #on_enter: self.load_carousel()
    MDScreen:

        md_bg_color: [0/255,51/255,78/255,1]
        BoxLayout:
            orientation:"vertical"



        MDCard:
            size_hint: (0.9,0.9)
            pos_hint: {'center_x':0.5, 'center_y':0.5}
            spacing: 30
            orientation: "vertical"
            padding: 30
            radius:[30,30,30,30]



            Carousel:

                id: favorites_carousel
                direction: 'right'
                loop: True




                #AsyncImage:
                #    source:'images/BabyYoda.png'
                #    allow_stretch: True
                #    pos_hint: {'center_x':0.5, 'center_y':0.5}


            MDLabel:
                id: welcome_label
                text: "Hi, User!"
                font_size: 45
                halign: "center"
                pos_hint: {'top':0.4, 'center_x': .5}
                size_hint: .8,.14
                color:[0/255,51/255,78/255,1]
                canvas.before:
                    #Color:
                        #rgba: (0/255,51/255,78/255,1)
                    Rectangle:
                        pos: self.pos
                        size: self.size


            MDRoundFlatButton:
                text: "Favorites"
                pos_hint: {"center_x":0.5, "center_y":0.9}
                theme_text_color: "Custom"
                size_hint: .45,.12
                md_bg_color: [232/255,232/255,232/255,1]
                text_color: [0/255,51/255,78/255,1]
                on_release:
                    root.parent.transition = SlideTransition(direction="left")
                    app.change_screen("fscreen")


            MDRoundFlatButton:
                text: "Search"
                pos_hint: {"center_x":0.5, "center_y":0.9}
                size_hint: .45,.12
                theme_text_color: "Custom"
                md_bg_color: [232/255,232/255,232/255,1]
                text_color: [0/255,51/255,78/255,1]
                on_release:
                    root.parent.transition = SlideTransition(direction="left")
                    app.change_screen("distorname")


            MDRoundFlatButton:
                text: "Edit Account"
                theme_text_color: "Custom"
                pos_hint: {"center_x":0.5, "center_y":0.9}
                size_hint: .45,.12
                md_bg_color: [232/255,232/255,232/255,1]
                text_color: [0/255,51/255,78/255,1]
                on_release:
                    root.parent.transition = SlideTransition(direction="left")
                    app.change_screen("editaccount")
