<PromotionPageScreen>:
    MDScreen:

        md_bg_color: [255/255,255/255,255/255,1]
        BoxLayout:
            orientation:"vertical"
            padding: 30
            spacing: 30

            MDLabel:
                text:"Upload Promotion"
                font_size: 50
                halign: "center"
                text_color: "Black"

            Image:
                id: shop_content
                text: 'BabyYoda.png'
                source:'BabyYoda.png'
                pos_hint: {'center_x':0.5, 'center_y':0.5}

            MDTextField:
                id: deal_text
                text: ""
                hint_text: "Write something about this post..."
                size_hint_x: None
                width: 500
                pos_hint: {"center_x":0.5}

            MDTextField:
                id: duration
                text: ""
                hint_text: "How long will this deal last (in hours)..."
                size_hint_x: None
                width: 500
                pos_hint: {"center_x":0.5}


            MDRoundFlatButton:
                text: "Upload"
                theme_text_color: "Custom"
                pos_hint: {"center_x":0.5, "center_y":0.5}
                md_bg_color: [232/255,232/255,232/255,1]
                text_color: [0/255,51/255,78/255,1]
                on_release:
                    app.post_deal(deal_text.text, duration.text)


            MDRoundFlatButton:
                text: "Cancel"
                theme_text_color: "Custom"
                pos_hint: {"center_x":0.5, "center_y":0.5}
                md_bg_color: [232/255,232/255,232/255,1]
                text_color: [0/255,51/255,78/255,1]
                on_release:
                    app.change_screen("shophomepage")


