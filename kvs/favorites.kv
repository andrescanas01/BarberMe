<FavoriteScreen>:
    #favorites_label: favorites_label
    FloatLayout:
        size: root.width, root.height
        canvas:
            Color:
                rgba: (0/255,51/255,78/255,1)
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            id: favorites_label
            font_size: "20dp"
            text: "Your Favorites"
            color: [23,23,23,1]
            opacity: 1
            pos_hint: {"top": 0.95, "left": 0.6}
            size_hint: (0.45, 0.2)

        MDTextFieldRound:
            id: favorites_search
            hint_text: "Search..."
            #color_mode: 'custom'
            normal_color: 1,1,1,1
            color_active: 1,1,1,1
            #helper_text_mode: "on_focus"
            pos_hint: {"top": 0.874, "center_x": 0.355}
            size_hint: (.55,.045)
            opacity:0


        MDIconButton:
            #text: "back"
            theme_text_color: "Custom"
            md_bg_color: [232/255,232/255,232/255,1]
            text_color: [0/255,51/255,78/255,1]
            pos_hint: {"top": .985, "x": 0.05}
            icon: 'account-arrow-left'
            on_release:
                root.parent.transition = SlideTransition(direction="right")
                app.change_screen("userpage")

        MDIconButton:
            id: search
            icon: "magnify"
            pos_hint: {"top": 0.89, "right": 0.875}
            theme_text_color: "Custom"
            text_color: [23,23,23,1]
            on_release:
                root.Search()
        MDIconButton:
            id: add
            icon: "plus"
            pos_hint: {"top": 0.89, "right": 0.95}
            theme_text_color: "Custom"
            text_color: [23,23,23,1]
            on_release:
                app.change_screen("searchpage")
        ScrollView:
            canvas.before:
                Color:
                    rgba: (232/255,232/255,232/255,1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10,10,0,0]
            pos_hint: {"center_x":0.5, "bottom":0.5}
            size_hint: (.9,.8)
            bar_color: (232/255,232/255,232/255,1)
            FavoriteList:
                id: favorites_grid
                #cols: 1
                #spacing: 2, 2
                #size_hint_y: None
                #height: self.minimum.height
                #row_default_height: '100dp'
                #row_force_default: True


