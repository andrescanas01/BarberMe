<DistanceOrNameScreen>:
    MDScreen:

        md_bg_color: [232/255,232/255,232/255,1]


        BoxLayout:

            orientation:"vertical"
            canvas:
                Color:
                    rgba:[0/255,51/255,78/255,1]
                Rectangle:
                    pos: self.pos
                    size:(self.width , self.height)

        MDIconButton:
            #text: "back"
            theme_text_color: "Custom"
            md_bg_color: [232/255,232/255,232/255,1]
            text_color: [0/255,51/255,78/255,1]
            icon: 'arrow-left'
            pos_hint: {'center_x': 0.12, 'center_y': 0.09}
            on_release:
                root.parent.transition = SlideTransition(direction="right")
                root.parent.current = "userpage"
                root.parent.transition = SlideTransition(direction="left")

        MDFillRoundFlatButton:
            id: search_by_dist
            size_hint: .6, .072
            pos_hint: {"top": .45, "center_x": .5}
            text: "Search by distance"
            font_size: 17
            md_bg_color: [232/255,232/255,232/255,1]
            text_color:  [0/255,51/255,78/255,1]
            on_release:
                app.change_screen("searchbydist")

        MDFillRoundFlatButton:
            id: search_by_name
            size_hint: .6, .072
            pos_hint: {"top": .55, "center_x": .5}
            text: "Search by name"
            font_size: 17
            md_bg_color: [232/255,232/255,232/255,1]
            text_color: [0/255,51/255,78/255,1]
            on_release:
                app.change_screen("searchpage")


