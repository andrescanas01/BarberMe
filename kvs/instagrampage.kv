<InstagramPage>:
    MDScreen:

        md_bg_color: [232/255,232/255,232/255,1]


        BoxLayout:

            orientation:"vertical"
            spacing:30
            padding:30
            canvas:
                Color:
                    rgba:[0/255,51/255,78/255,1]


        MDTextField:
            id: insta_id
            text: ""
            hint_text: "Instagram ID"
            size_hint_x: None
            width: 500
            pos_hint: {"top": .45, "center_x": .5}


        MDFillRoundFlatButton:
            id: submit_insta
            size_hint: .6, .072
            pos_hint: {"top": .3, "center_x": .5}
            text: "Submit"
            font_size: 17
            md_bg_color: [232/255,232/255,232/255,1]
            text_color:  [0/255,51/255,78/255,1]
            on_release:
                app.set_insta(insta_id.text)

        MDIconButton:
            #text: "back"
            theme_text_color: "Custom"
            md_bg_color: [232/255,232/255,232/255,1]
            text_color: [0/255,51/255,78/255,1]
            icon: 'arrow-left'
            pos_hint: {'center_x': 0.12, 'center_y': 0.09}
            on_release:
                root.parent.transition = SlideTransition(direction="right")
                app.change_screen("socialpage")
                root.parent.transition = SlideTransition(direction="left")