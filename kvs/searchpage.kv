<SearchPageScreen>:
    MDScreen:
    #name: 'posting'
        BoxLayout:
            orientation:'vertical'
            padding: 30
            spacing: 30
            canvas:
                Color:
                    rgba:[0/255,51/255,78/255,1]
                Rectangle:
                    pos: self.pos
                    size:self.size
            MDTextField:
                hint_text: "Search..."
                color_mode: 'custom'
                helper_text_mode: "on_focus"
                line_color_focus: 1,1,1,1
                id:searchname

            MDIconButton:
                #text: "back"
                theme_text_color: "Custom"
                md_bg_color: [232/255,232/255,232/255,1]
                text_color: [0/255,51/255,78/255,1]
                pos_hint: {"x": .05, "y": 0.95}
                icon: 'account-arrow-left'
                on_release:
                    root.parent.transition = SlideTransition(direction="right")
                    app.change_screen("userpage")

            MDRoundFlatButton:
                text: "submit"
                theme_text_color: "Custom"
                pos_hint: {"center_x":0.5, "center_y":0.5}
                md_bg_color: [1,1,1,1]
                text_color: [0/255,51/255,78/255,1]
                on_release:
                    app.search_by_name(searchname.text)

