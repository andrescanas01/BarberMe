#: import MDLabel kivymd.uix.label
#: import Video kivy.uix.video
#: import MDIconButton kivymd.uix.button

<ShopScreen>:
    FloatLayout:
        MDLabel:
            id: shop_name
            canvas.before:
                Color:
                    rgba: (0/255,51/255,78/255,1)
                Rectangle:
                    pos: self.pos
                    size: self.size
            text_size: self.size
            font_style: 'H3'
            text: "Shop Name"
            halign: "center"
            pos_hint: {'x': 0, 'top':1}
            color: [23,23,23,1]
            size_hint: (1,0.1)

        MDIconButton:
            #text: "back"
            theme_text_color: "Custom"
            md_bg_color: [232/255,232/255,232/255,1]
            text_color: [0/255,51/255,78/255,1]
            pos_hint: {"top": .99, "x": 0.03}
            icon: 'arrow-left'
            on_release:
                root.parent.transition = SlideTransition(direction="right")
                print(app.screen_stack)
                app.change_screen(app.screen_stack.pop())

        MDRoundFlatButton:
            id:book_appointment
            text:"Book Appt"
            theme_text_color: "Custom"
            pos_hint: {"center_x":0.5, "center_y":0.18}
            md_bg_color: [1,1,1,1]
            text_color: [0/255,51/255,78/255,1]
            on_release:
                #app.search_by_name(searchname.text)
                app.change_screen("datepicker")

        MDIconButton:
            id: star
            icon: "star-outline"
            pos_hint: {'center_x': 0.9, 'top':0.99}
            theme_text_color: "Custom"
            text_color: [23,23,23,1]
            on_release:
                root.add_fave()



        Image:
            id: shop_image
            source: ""
            pos_hint: {'center_x': 0.5, 'top':0.88}
            size_hint: (1,0.5)

        MDLabel:
            id: shop_deal
            text_size: self.size
            text: "This shop currently does not offer any promotions."
            halign: "center"
            pos_hint: {'center_x': 0.5, 'y':0.2}
            size_hint: (1,0.1)
            text_size: self.width, None
        GridLayout:
            cols: 3
            pos_hint: {'center_x':0.8}
            size_hint: (1,0.1)
            MDIconButton:
                id: social1
                icon: "images/facebook.png"
                #icon: "f_logo_RGB-Blue_58.png"
                on_release:
                    print("facebook")
                    root.open_media(root.flink, "facebook")

            MDIconButton:
                id: social2
                icon: "images/instagram.png"
                #icon: "Instagram_AppIcon_Aug2017.png"
                on_release:
                    print("insta")
                    root.open_media(root.ilink, "instagram")