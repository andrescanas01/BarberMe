<ChangePasswordPage>:
    MDScreen:

        md_bg_color: [232/255,232/255,232/255,1]


        BoxLayout:

            orientation:"vertical"
            spacing:30
            padding:30
            canvas:
                Color:
                    rgba:[0/255,51/255,78/255,1]
        MDTextField:
            id: em
            hint_text: "Email"
            size_hint_x: None
            width: 500
            pos_hint: {"top": .45, "center_x": .5}


        MDRoundFlatButton:
            text: "Submit"
            pos_hint: {'center_x': 0.5, 'center_y': 0.09}
            theme_text_color: "Custom"
            md_bg_color: [232/255,232/255,232/255,1]
            text_color: [0/255,51/255,78/255,1]
            on_release:
                app.change_pw(em.text)