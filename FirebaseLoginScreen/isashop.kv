<IsAShopScreen>:
    MDScreen:

        md_bg_color: [232/255,232/255,232/255,1]


        BoxLayout:

            orientation:"vertical"
            canvas:
                Color:
                    rgba:[0/255,51/255,78/255,1]
                Rectangle:
                    pos: self.pos
                    size:(self.width , self.height)

        MDIconButton:
            #text: "back"
            theme_text_color: "Custom"
            md_bg_color: [232/255,232/255,232/255,1]
            text_color: [0/255,51/255,78/255,1]
            icon: 'arrow-left'
            pos_hint: {'center_x': 0.12, 'center_y': 0.09}
            on_release:
                root.parent.transition = SlideTransition(direction="right")
                root.parent.current = "welcome_screen"
                root.parent.transition = SlideTransition(direction="left")

        MDFillRoundFlatButton:
            id: log_in_button
            size_hint: .6, .072
            pos_hint: {"top": .45, "center_x": .5}
            text: "I am a Shop Owner"
            font_size: 17
            md_bg_color: [232/255,232/255,232/255,1]
            text_color:  [0/255,51/255,78/255,1]
            on_release:
                root.parent.current = "create_shop_account_screen"

        MDFillRoundFlatButton:
            id: create_account_button
            size_hint: .6, .072
            pos_hint: {"top": .55, "center_x": .5}
            text: "I am a Customer"
            font_size: 17
            md_bg_color: [232/255,232/255,232/255,1]
            text_color: [0/255,51/255,78/255,1]
            on_release:
                root.parent.current = "create_account_screen"


